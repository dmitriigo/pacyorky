<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOGS" value="./logs"/>
    <springProperty name="mail" source="spring.mail.username"/>
    <springProperty name="password" source="spring.mail.password"/>
    <springProperty name="port" source="spring.mail.port"/>
    <springProperty name="host" source="spring.mail.host"/>
    <springProperty name="sendto" source="log.sendto"/>
    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                [%thread] %highlight(%-5level) %cyan(%logger{15}) - %msg %n
            </Pattern>
        </layout>
    </appender>
    <appender name="emailAppender" class="ch.qos.logback.classic.net.SMTPAppender">
        <smtpHost>${host}</smtpHost>
        <smtpPort>${port}</smtpPort>
        <username>${mail}</username>
        <password>${password}</password>
        <to>${sendto}</to>
        <from>${mail}</from>
        <subject>BAELDUNG: %logger{20} - %msg</subject>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <layout class="ch.qos.logback.classic.html.HTMLLayout">
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg%n</pattern>
        </layout>
    </appender>
    <root level="info">
        <appender-ref ref="Console"/>
        <appender-ref ref="emailAppender"/>
    </root>
</configuration>